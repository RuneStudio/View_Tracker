.card-panel .text-title{
  font-size: 1.3rem;
  font-weight: bold;
}

.card-panel .text-content{
  font-size: 1rem;
  margin: 0;
  font-weight: normal;
}

.card-panel{
  box-shadow: none !important;
}

.card-header{
  display: block;
  position: relative;
  width: 100%;
  color: #fff;
  padding: 1.5rem 1rem;
  font-size: 1.5rem;
}

.card .card-content{
  padding: 1rem !important;
  color: #fff;
  font-size: 1.3rem;
}

.card .card-content .property-type{
  font-size: 1.1rem;
  font-weight: bold;
  color: #fff;
  text-transform: uppercase;
}

.card .card-content .property-icon{
  font-size: 1.2rem;
  font-weight: bold;
  margin-top: 1rem;
}

.card .card-action{
  border: 0 !important;
}

.card .hover{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 10px 20px 10px 20px;
  padding: .6rem 1rem 0 .6rem;
  color: #FFFFFF;
  background: rgba(38, 38, 38, 0.63);
  text-align: left;
  display: table;
}

.card .card-image img{
  background-size: cover;
background-repeat: no-repeat;
background-position: center;
background-color: #191919;
}
