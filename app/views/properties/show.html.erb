<%= render "property_header" %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row house-info">
    <div class="col s8 house-type">
    <%= @property.bedrooms %> bedroom <%= @property.house_type %> <%= @property.list_type %>
  </div>
  <div class="col s4 house-rent">
    $ <%= @property.rent %> per week
  </div>
</div>
  <div class="row house-address">
    <div class="col s12">
      <%= @property.street_name %>, <%= @property.suburb %>, <%= @property.city %>, <%= @property.country %>
    </div>
  </div>
  <div class="row left-panel">
    <div class="col s7">
      <div class="row gallery">
        <div class="col s12">
          <div class="card">
            <div class="card-image">
              <%= image_tag @property.picture.url if @property.picture? %>
            </div>
          </div>
        </div>
      </div>

      <table class="striped padding-left">
        <tbody>
          <tr>
            <td>Rooms:</td>
            <td><%= @property.bedrooms %> bedrooms, <%= @property.bathrooms %> bathrooms</td>
          </tr>
          <tr>
            <td>Property Type:</td>
            <td><%= @property.house_type %></td>
          </tr>
          <tr>
            <td>Amenities:</td>
            <td><%= @property.furnishings %></td>
          </tr>
          <tr>
            <td>Parking:</td>
            <td><%= @property.parking %></td>
          </tr>
          <tr>
            <td>House Rules:</td>
            <td>n/a</td>
          </tr>
          <tr>
            <td>Features:</td>
            <td><%= @property.feature %></td>
          </tr>
          <tr>
            <td>Availability:</td>
            <td>upcoming</td>
          </tr>
          <tr>
            <td>Description</td>
            <td><%= @property.description %></td>
          </tr>
        </tbody>
      </table>

      <br/>

      <div class="row">
        <div class="col s12">
          <ul class="tabs">
            <li class="tab col s3"><a href="#map">Map</a></li>
            <li class="tab col s3"><a href="#view-map">View</a></li>
          </ul>
        </div>

        <div id="map" class="col s12">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2549.3202767856537!2d174.7487327151784!3d-41.280970547999296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6d38b1b53a2592d5%3A0x59ef1b0d9efed13f!2s1+Karori+Rd%2C+Karori%2C+Wellington+6012!5e1!3m2!1szh-CN!2snz!4v1486364514163" width="100%" height="600px" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div id="view-map" class="col s12">
          <iframe src="https://www.google.com/maps/embed?pb=!1m0!3m2!1szh-CN!2snz!4v1486364417787!6m8!1m7!1sxGkhYHvUTpal6lxJWV8QKQ!2m2!1d-41.28103915071235!2d174.7508817099404!3f0!4f0!5f0.7820865974627469" width="100%" height="600px" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
      </div>

    </div>
  <div class="col s5">
    <% unless current_user.nil? %>
      <% if @property.user_id == current_user.id %>
        <%= render "landlord_show" %>
      <% else @property.user_id != current_user.id %>
        <%= render "tenant_show" %>
      <% end %>
    <% end %>
    <% unless current_user.nil? %>
      <% if @property.user_id == current_user.id %>
        <%= render "landlord_show_action" %>
      <% else @property.user_id != current_user.id %>
        <%= render "tenant_show_action" %>
      <% end %>
    <% end %>

  </div>
  </div>
</div>
