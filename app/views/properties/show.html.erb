<%= render "shared/list_header" %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Property</h1>

  <p>
    <strong>Title:</strong>
    <%= @property.title %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @property.address %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @property.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <td><%= image_tag @property.picture.url if @property.picture? %><td>
  </p>

  <p>
    <strong>Publish:</strong>
    <%= @property.publish %>
  </p>

  <%= link_to 'Edit', edit_property_path(@property) %> |
  <%= link_to 'Back', properties_path %>
</div>
