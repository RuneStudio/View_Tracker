<h5>Upcoming open home time</h5>
<table>
  <thead>
    <tr>
      <th>Time</th>
    </tr>
  </thead>

  <tbody>
    <% @property.open_home_times.each do |open_home_time| %>
      <tr>
        <td><%= link_to(open_home_time.time, edit_property_open_home_time_path(@property, open_home_time.id)) %></td>

          <% @property.applications.each do |application| %>
            <% if open_home_time.user.id == application.user_id %>
              <td><%= link_to(open_home_time.user.full_name, property_application_path(@property, application.id)) %></td>
              <td><%= link_to('Approve', root_path) %></td>
            <% elsif open_home_time.user == @property.user %>
              <td><%= link_to("Mine", property_open_home_time_path(@property, open_home_time.id)) %></td>
              <td><%= link_to('Delete', root_path) %></td>
            <% end %>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
